@model PhlegmaticOne.InnoGotchi.Web.ViewModels.LoginViewModel

<h2>Login</h2>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="All"></div>
    <div>
        <div>
            <label asp-for="Email">Enter Email</label><br />
            <input type="text" asp-for="Email" />
        </div>
        <div>
            <label asp-for="Password">Enter Password</label><br />
            <input type="password" asp-for="Password" />
        </div>
        <div>
            <input type="submit" value="Регистрация" />
        </div>
    </div>
</form>
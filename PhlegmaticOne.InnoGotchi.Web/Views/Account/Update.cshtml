@model UpdateAccountViewModel

<form asp-action="Update" asp-controller="Account" asp-anti-forgery="true" enctype="multipart/form-data">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            @Html.LabelFor(x => x.FirstName, "Change first name", new { @class = "text-white" })<br/>
            <input type="text" asp-for="FirstName"/>
            <span asp-validation-for="FirstName"></span>
        </div>
        <div>
            @Html.LabelFor(x => x.LastName, "Change last name", new { @class = "text-white" })<br />
            <input type="text" asp-for="LastName" />
            <span asp-validation-for="LastName"></span>
        </div>
        <div>
            @Html.LabelFor(x => x.OldPassword, "Enter old password", new { @class = "text-white" })<br />
            <input asp-for="OldPassword" />
            <span asp-validation-for="OldPassword" />
        </div>
        <div>
            @Html.LabelFor(x => x.FirstName, "Enter new password", new { @class = "text-white" })<br />
            <input asp-for="NewPassword" />
            <span asp-validation-for="NewPassword"></span>
        </div>
        <div class="col-9">
            @Html.LabelFor(x => x.Avatar, "Change avatar", new { @class = "text-white" })<br />
            <input name="Avatar" type="file" class="form-control" />
        </div>
        <div class="m-5">
            <button class="btn btn-primary profile-button" type="submit">Save Profile</button>
        </div>
    </div>
</form>
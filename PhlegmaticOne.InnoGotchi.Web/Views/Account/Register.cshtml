@model RegisterViewModel

<h2>Registration</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true" enctype="multipart/form-data">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Email" class="text-white-50">Enter Email</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" ></span>
        </div>
        <div>
            <label asp-for="FirstName" class="text-white">Enter first name</label><br />
            <input type="text" asp-for="FirstName" />
            <span asp-validation-for="FirstName" ></span>
        </div>
        <div>
            <label asp-for="LastName" class="text-white">Enter second name</label><br />
            <input type="text" asp-for="LastName" />
            <span asp-validation-for="LastName"></span>
        </div>
        <div>
            <label asp-for="Password" class="text-white">Enter password</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="ConfirmPassword" class="text-white">Confirm password</label><br />
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" ></span>
        </div>
        <div>
            <label asp-for="Avatar" class="text-white">Add avatar</label>
            <input name="Avatar" type="file" class="form-control" />
        </div>
        <div>
            <input type="submit" value="Registration" />
        </div>
    </div>
</form>
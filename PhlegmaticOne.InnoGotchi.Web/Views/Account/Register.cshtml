@model PhlegmaticOne.InnoGotchi.Web.ViewModels.RegisterViewModel

<h2>Registration</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true" enctype="multipart/form-data">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Email">Enter Email</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" ></span>
        </div>
        <div>
            <label asp-for="FirstName">Enter first name</label><br />
            <input type="text" asp-for="FirstName" />
            <span asp-validation-for="FirstName" ></span>
        </div>
        <div>
            <label asp-for="SecondName">Enter second name</label><br />
            <input type="text" asp-for="SecondName" />
            <span asp-validation-for="SecondName"></span>
        </div>
        <div>
            <label asp-for="Password">Enter password</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="ConfirmPassword">Confirm password</label><br />
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" ></span>
        </div>
        <div>
            <label asp-for="Avatar">Add avatar</label>
            <input name="Avatar" type="file" class="form-control" />
        </div>
        <div>
            <input type="submit" value="Registration" />
        </div>
    </div>
</form>
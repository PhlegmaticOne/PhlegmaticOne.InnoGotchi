@model DetailedFarmViewModel

<div class="container">
    <div class="row text-center mt-3">
        <h2 class="h2 text-white">@Model.Name</h2>
    </div>
    <div class="card-group vgr-cards mt-2" style="justify-content: space-around">
        @foreach (var innoGotchi in Model.InnoGotchies)
        {
            <div class="row mt-4">
                <div style="height: 186px; width: 150px">
                    <svg class="card-img" viewBox="0 0 420 620" style="position: relative; background: wheat;">
                        @foreach (var component in innoGotchi.Components)
                        {
                            <image style="position: absolute; transform: translate(@(component.TranslationX)px, @(component.TranslationY)px) scale(@component.ScaleX, @component.ScaleY)"
                                   width="100" height="100"
                                   href="@component.ImageUrl"/>
                        }
                    </svg>
                </div>
                <div class="card-body">
                    <h4 class="card-title pt-1">@innoGotchi.Name</h4>
                    <div>
                        <label>Hunger level: @innoGotchi.HungerLevel</label><br/>
                        <label>Thirsty level: @innoGotchi.ThirstLevel</label><br/>
                        <label>Age: @innoGotchi.Age</label><br/>
                        <label>Happiness days: @innoGotchi.HappinessDaysCount</label><br/>
                    </div>
                    <div class="mt-1 body-links">
                        <a href="#" class="btn btn-outline-secondary btn-dark">Feed</a>
                        <a href="#" class="btn btn-outline-secondary btn-dark">Drink</a>
                        <a href="#" class="btn btn-outline-secondary btn-dark">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Styles
{
    <link rel="stylesheet" href="~/css/farm_details.css" asp-append-version="true"/>
}

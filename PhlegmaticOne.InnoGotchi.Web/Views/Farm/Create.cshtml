@model CreateFarmViewModel

<h2>Create farm</h2>

<form asp-action="Create" asp-controller="Farm" method="post">
    <div>
        <label asp-for="Name">Enter farm name</label><br />
        <input type="text" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <input type="submit" value="Create" />
    </div>
</form>
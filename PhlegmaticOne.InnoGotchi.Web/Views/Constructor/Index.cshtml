@model PhlegmaticOne.InnoGotchi.Web.ViewModels.ConstructorViewModel
<h1>Constructor</h1>

<main>
    <div class="container">
        <div class="row">
            <div class="col-8">
                @foreach (var component in Model.ComponentPaths)
                {
                    <div class="row">
                        <p>@component.Key</p>
                        @foreach (var componentImagePath in component.Value)
                        {
                            <div class="col dragging" draggable="true">
                                <svg style="position: relative;" width="100px" height="100px">
                                    <image style="position: absolute; transform: translate(0px, 0px) scale(1, 1)" width="100px" height="100px" href="@componentImagePath"/>
                                </svg>
                            </div>
                        }
                    </div>
                }
            </div>
            <div class="col-4">
                <div style="background: aqua; height: 500px">
                    <svg class="drop-area" style="position: relative" width="100%" height="100%"></svg>
                </div>
            </div>
        </div>
    </div>

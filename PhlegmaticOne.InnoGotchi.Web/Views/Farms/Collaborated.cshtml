@model IList<PreviewFarmStatisticsViewModel>
@{
    Layout = "_Column_Layout";
}

<h3 class="text-white mt-3 text-center">Collaborated farms overview</h3>

@if (Model.Count == 0)
{
    <h5 class="text-white mt-3 text-center">You haven't collaborated farms</h5>
}
else
{
    @foreach (var statistics in Model)
    {
        @(await Html.PartialAsync("PreviewFarmStatisticsPartialView", statistics))
    }
}

@section ColumnContent
{
    @await Html.PartialAsync("FarmsNavigationPartialView")
}

@model PhlegmaticOne.InnoGotchi.Web.ViewModels.AuthenticationViewModel
<h2>Регистрация</h2>

<form asp-action="Authenticate" asp-controller="Authentication" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="All"></div>
    <div>
        <div>
            <label asp-for="Email">Введите Email</label><br />
            <input type="text" asp-for="Email" />
        </div>
        <div>
            <label asp-for="Password">Введите Password</label><br />
            <input type="password" asp-for="Password" />
        </div>
        <div>
            <input type="submit" value="Регистрация" />
        </div>
    </div>
</form>